<%layout("./layouts/boilerplate") %>

    <div class="row mt-3">
        <h1>login form</h1>
        <div class="col-6 offset-3">
            <form action="/login" method="post" class="needs-validation" novalidate>
                <div class="mg-3 mb-2">
                    <label for="text" class="form-label">username</label> <br>
                    <input type="text" name="username" placeholder="username" id="text" class="form-control" required>
                    

                </div>
              
                <div class="mg-3 mb-2">
                    <label for="password" class="form-label">Password</label> <br>
                    <input type="password" name="password" placeholder="password" id="password" class="form-control"
                        required>
                   

                </div>
                <button class="btn btn-success btn-dark-outline">login</button>

            </form>

            <form action="/signup" method="post" class="mt-5"> 
                <button class="btn btn-info">signup</button>
            </form>

        </div>
    </div>